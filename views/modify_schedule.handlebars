<style media="screen">

  .form-group {
    text-align: center;
    font-size: 20px;
  }

  input {
    max-width: 20em;
    margin: auto;
    display: block;
    text-align: center;
  }
  p {
    font-size: 21px;
    font-weight: bold;
  }
  span {
    font-size: 12px;
  }

</style>
{{#if login}}
  {{#if tutor}}
  <script type="text/javascript">
    $(function() {
      var urlParams = new URLSearchParams(window.location.search);
      var data = {
        schedule_id: urlParams.get('id')
      };
      // Load appointment info
      $.ajax({
        type: 'post',
        url: 'render_schedule',
        data: data,
        success: function(response) {
          // Shift Start Time
          $('#date').text(response.success[0].date.slice(0,10));
          $('#start_time').val(response.success[0].start);
          $('#end_time').val(response.success[0].end);

          // Shift End Time
        },
        error: function(jqXHR, textStatus, errorThrown) {
          console.log(textStatus, errorThrown);
        }
      });

      // handles updating times
      $("#update_time").on('click', function() {
        var updatedTime = {
          id: urlParams.get('id'),
          start_time: $('#start_time').val(),
          end_time: $('#end_time').val(),
        }
        $.ajax({
          type: 'post',
          url: 'update_schedule',
          data: updatedTime,
          success: function(response) {
            location.assign("tutor_view");
          },
          error: function(jqXHR, textStatus, errorThrown) {
            console.log(textStatus, errorThrown);
          }
        });
      });
      //
      // Handle change
    });

  </script>
  <div class="container">
    <h2><center>Schedule Info</center></h2>
    <div class="form-group">
      <p id="date"></p>
    </div>
    <!--  start time edit-->
    <div class="form-group">
     <label class="control-label " for="start_time">Start: </label>
      <input class="form-control" id="start_time" name="start_time" type="text"/>
      <span class="note">Format: HH:MM:SS</span>
    </div>
    <!--  end time edit-->
    <div class="form-group ">
     <label class="control-label " for="end_time">End: </label>
      <input class="form-control" id="end_time" name="end_time" type="text"/>
      <span class="note">Format: HH:MM:SS</span>
    </div>

    <div class="form-group">
     <div>
      <button id="update_time" class="btn btn-primary " name="submit" type="submit">Submit</button>
     </div>
    </div>

  </div>

  {{else}}
  <h1 align="center">You need to login to view this page.</h1>
  {{/if}}
{{/if}}
